{
    "manifest_version": 2,
    "name": "Black Friday Bot",
    "description": "",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.kabum.com.br/*"
            ],
            "css": [
                "css/kabum.css",
                "css/toastr.min.css"
            ],
            "js": [
                "js/imports/jquery-3.2.1.min.js",
                "js/imports/toastr.min.js",
                "js/shared/config.js",
                "js/shared/storage.js",
                "js/shared/observer.js",
                "js/app/cart.js",
                "js/app/switch.js",
                "js/app/product.js",
                "js/app/promotion.js",
                "js/main.js"
            ]
        }
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "https://www.kabum.com.br/*"
    ]
}