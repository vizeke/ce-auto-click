{
    "manifest_version": 2,
    "name": "Black Friday Bot",
    "description": "",
    "version": "0.2.0",
    "icons": {
        "128": "image/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.kabum.com.br/*"
            ],
            "css": [
                "css/kabum.css",
                "css/toastr.min.css"
            ],
            "js": [
                "js/imports/jquery-3.2.1.min.js",
                "js/imports/toastr.min.js",
                "js/imports/zone.min.js",
                "js/imports/long-stack-trace-zone.min.js",
                "js/shared/config.js",
                "js/shared/storage.js",
                "js/shared/observer.js",
                "js/app/cart.js",
                "js/app/switch.js",
                "js/app/product.js",
                "js/app/promotion.js",
                "js/main.js"
            ]
        }
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "https://*.kabum.com.br/*"
    ]
}